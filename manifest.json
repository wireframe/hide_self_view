{
  "manifest_version": 2,
  "name": "Self-View Hider (Google Meet, Google Hangout)",
  "version": "1.0",
  "description": "Hides the self-view in Google Meet/Hangout video calls.",
  "permissions": [
    "tabs",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["*://meet.google.com/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "48": "icons/icon-48.png"
  },
  "browser_action": {
    "default_icon": "icons/icon-48.png",
    "default_title": "Toggle Self-View"
  }
}